<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SterlingSwitch.Custom.Controls.SearchableExtendedPicker">
    

        <StackLayout>
            <Label x:Name="HeaderTxt" Style="{DynamicResource FormHeadingStyle}" Text="{Binding PickerTitle}" />
            <Label x:Name="SelectedTxt" Style="{DynamicResource EntryLabelStyle}" Text="{Binding SelectedItem}"/>
            <BoxView x:Name="BoxViewLine" Style="{DynamicResource SeparatorStyle}" />
        </StackLayout>
   
</ContentView>